@using AnimalShelterClient.Models


<div class="pe-5 ps-3 py-4 border rounded shadow-sm bg-light">
  <div class="row">
    <div class="col-md-3 col-sm-12">
      <div class="mb-1">
        <h3 class="mb-5 fw-light ">Search Parameters</h3>
        <form>
        <label for="species my-3">Species</label>
        <select class="form-control" id="species" name="species">
          <option disabled selected></option>
          <option value="/animals?species=dog">Dogs</option>
          <option value="/animals?species=cat">Cats</option>
        </select>
        <label for="species my-3">Gender</label>
        <select class="form-control" id="species" name="species">
          <option disabled selected></option>
          <option value="/animals?species=dog">Dogs</option>
          <option value="/animals?species=cat">Cats</option>
        </select>
        <label for="species my-3">Breed</label>
        <select class="form-control" id="species" name="species">
          <option disabled selected></option>
          <option value="/animals?species=dog">Dogs</option>
          <option value="/animals?species=cat">Cats</option>
        </select>
        </form>

      </div>
    </div>
    <div class="col-md-9 col-sm-12">
      <h1 class="fw-light text-center mb-0">Animals</h1>
      <div class="mb-1 text-end">
        <label for="sortMethod">Search Parameters</label>
      </div>
      @for (int x = 0; x < @Model.Count; x++)
      {
        if (x == 0 || (x % 3 == 0))
        {
          @:<div class="row">
        }
          <div class="col-sm-12  my-3 col-lg-4">
            <div class="card shadow-sm bg-white">
              <div class="text-end p-2">
                <a class="text-dark text-decoration-none" href="/destinations/edit/@Model[x].AnimalId">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square text-muted" viewBox="0 0 16 16">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                  </svg>
                </a>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle text-muted" viewBox="0 0 16 16" data-bs-toggle="modal" data-bs-target="#deleteModal-@x" role="button">
                  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                  <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                </svg>
                <div class="modal fade" id="deleteModal-@x" tabindex="-1" aria-labelledby="deleteModalLabel-@x" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <div class="modal-header shadow-sm">
                        <h5 class="modal-title" id="deleteModalLabel-@x">Confirm Deletion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body text-center p-5">
                        Are you sure you want to delete @Model[x].Name?
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        @using (Html.BeginForm("Delete", "Destinations"))
                        {
                          <input type="hidden" name="id" value="@Model[x].AnimalId">
                          <button type="submit" class="btn btn-danger">Yes, Delete</button>
                        }
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card border-0">
                <div class="card-body pt-0">
                  <div class="px-5 text-dark">
                    <div class="text-center mb-2">
                      <h3 class="fw-normal">@Model[x].Name</h3>
                      @Model[x].Breed
                    </div>
                  </div>
                  <img class="card-img-top rounded" style="height: 200px; object-fit: cover;" src="@Model[x].AnimalPhotoURL" alt="picture of @Model[x].Name">
                </div>
              </div>
              <div class="card-body mx-0 pt-0">
                <p class="card-text text-center fs-6">
                  Fees: $@Model[x].AdoptionPrice
                  <br>
                  Listing Date: @Model[x].DateListed.ToString("MM/dd/yyyy")


                </p>
                <div class="text-center">
                  <button type="button" class="btn btn-sm travel-color-darkest text-white shadow-sm" data-bs-toggle="modal" data-bs-target="#exampleModal-@x">
                    Adopt
                  </button>
                </div>
                <div class="modal fade" id="exampleModal-@x" tabindex="-1" aria-labelledby="#@Model[x].AnimalId-ModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    @using (Html.BeginForm("Create", "Reviews"))
                    {
                    <div class="modal-content">
                      <div class="modal-header">
                        <h4 class="modal-title" id="@Model[x].AnimalId-ModalLabel">@Model[x].Name<span class="fs-5 fw-light"> | Apply to Adpot</span></h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body px-5 bg-light">
                        <p class="my-5">We are thrilled in your interest in @Model[x].Name! For the application process, please tell us a little bit about yourself. Once we review your appication, we will reach out with next steps.
                        </p>
                        <div class="form-group">
                          <label for="reviewText-@x">About You</label>
                          <textarea rows="10" class="form-control mb-3 shadow-sm" name="Review.ReviewText" id="reviewText-@x" required="required"></textarea>
                        </div>
                        <div class="form-group">
                          <label for="reviewUserName-@x">What kind of housing do you have?</label>
                          <input type="text" class="form-control mb-3 shadow-sm" name="Review.UserName" id="reviewUserName-@x" required="required">
                        </div>
                        <div class="form-group">
                          <label for="rating-@x">Phone</label>
                          <input type="number" class="form-control w-50 shadow-sm mb-3" name="Review.Rating" id="rating-@x" min="0" max="10">
                        </div>
                        <div class="form-group">
                          <label for="rating-@x">Email</label>
                          <input type="email" class="form-control shadow-sm mb-3" name="Review.Rating" id="rating-@x">
                        </div>
                        <input type="hidden" value="@Model[x].AnimalId" name="Animal.AnimalId">
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn travel-color-darkest text-white">Add Review</button>
                      </div>
                    </div>
                    }
                  </div>
                </div>
              </div>
            </div>
          </div>
        if ((x+1) % 3 == 0)
        {
          @:</div>
        }
      }
    </div>
  </div>
</div>
